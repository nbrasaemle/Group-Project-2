<div class="container">
    <br>
    <h2 class=" font">Dashboard</h2>
    {{!-- <h5 class="fontTwo">Hurray! you are logged in.</h5> --}}
    <div class="row">
        {{!--
        <div class="col-sm-2 avatar-img"> --}}

        </div>
        <div class="col-sm-12">
            <div>
                <h4 class="profile-label">Username: </h4>
                <p class="lead fontTwo profile-content" id="name"> {{username}} </p>
            </div>
            {{!--
            <div>
                <h4 class="profile-label">Email: </h4>
                <p class="lead fontTwo profile-content" id="user-email"> </p>
            </div> --}}

        </div>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3 class="profile-label">Parties Joined: </h3>
        </div>
    </div>
    {{#unless joinedParties}}
    <div class="row">
        <div class="col-md-12">
            <h4 class="font">There are no parties you are apart of at this time </h4>
        </div>
    </div>
    <div class="row wrapper">
        {{/unless}} {{#each Users_games}} {{>parties/party-block}} {{/each}}
        <br>

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3 class="profile-label">Hosted Parties: </h3>
    </div>
</div>

{{#unless hostedParties}}
<div class="row">
    <div class="col-md-12">
        <h4 class="font">You are not hosting any parties at this time </h4>
    </div>
</div>
<div class="row wrapper">
    {{/unless}} {{#each Hosted_games}} {{>parties/hosted-party-block}} {{/each}}
</div>
<br>

</div>
</div>

<div class="row">
    <div class="col-sm-12 center" id="create-party">
        <h4 class="font">Don't see a game or party to play with? Create your own!</h4>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary fontTwo" id="create-btn" data-toggle="modal" data-target="#gameModal">Create
            a Party</button>
        <br>
        <br>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="gameModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create a New Party!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <div aria-hidden="true">&times;</div>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Game select</label>
                        <select class="form-control" id="game-name">
                            <option>Dungeons & Dragons</option>
                            <option>Magic the Gathering</option>
                            <option>Pandemic</option>
                            <option>Pathfinder</option>
                            <option>PokemonGo</option>
                            <option>Settlers of Catan</option>
                            <option>Warhammer</option>
                            <option>Chess</option>
                            <option>Bring Your Own Game</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="party-name">Party Name:</label>
                        <input type="text" class="form-control" id="party-name" placeholder="name">
                    </div>
                    <div class="form-row">
                        <label for="address-input" class="labelStyle">Address</label>
                    </div>
                    <div id="address-container">
                        <input class="form-control" id="address-input" type="text" placeholder="Enter a location" name="Address" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Player Level Select:</label>
                        <p class="card-subtitle mb-2 text-muted"></p>
                        <select class="form-control" id="experience-level">
                            <option>Any level</option>
                            <option>Beginner level</option>
                            <option>Moderate level</option>
                            <option>Experienced level</option>

                        </select>
                    </div>
                    <div class="form-group">
                        <label for="party-name">Maximum Number of Players:</label>
                        <input type="text" class="form-control" id="num-players" placeholder="number">
                    </div>
                    <div class="form-group">
                        <label for="date">Date of Party:</label>

                        <input type="text" class="form-control" placeholder="Date" id="date">

                    </div>
                    <div class="form-group">
                        <label for="date">Time of Party:</label>

                        <input type="text" class="form-control" placeholder="Time">

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="new-party">Create Party</button>
            </div>
        </div>
    </div>
</div>
</div>